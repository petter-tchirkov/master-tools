extends ../layouts/master.pug

block title
  title Услуги мастеров

block basicSeo
  meta(name='description' content='Contact page')
  meta(name='keywords', content='contact, page')
  meta(name='author' content='')

block manifestBrowserconfigFiles
  link(href='../manifest.json', rel='manifest')
  meta(name='msapplication-config' content='../browserconfig.xml')

block content

  // Menu
  +menu('contact')

  //- Desktop page
  .serv-page
    .serv-page__container.container
      h2.serv-page__title КАКИЕ УСЛУГИ МЫ ОКАЗЫВАЕМ
      .serv-page__item#tv
        .serv-page__info
          h3 Ремонт телевизоров
          ul.serv-page__services
            li
              p Замена матриц
              span от 430 грн
            li
              p Замена ламп
              span от 150 грн
            li
              p Замена шлейфов
              span от 350 грн
            li
              p Замена экранов
              span от 430 грн
            li
              p Ремонт тюнеров
              span от 300 грн
